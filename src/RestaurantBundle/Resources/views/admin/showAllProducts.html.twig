{% extends 'base.html.twig' %}

{% block body %}


    <h3>Lista produktów:</h3>

    <table class="table table-condensed">
        <thead>
        <tr>
            <th>Nazwa</th>
            <th>Cena</th>
            <th>Opis</th>
            <th>Kcal</th>
            <th>Kategoria</th>
            <th>zdjęcie</th>
            <th>edytuj/usuń</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.kCal }}</td>
                <td>{{ product.category }}</td>
                <td>{{ product.photo }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('product_edit', { 'id': product.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}