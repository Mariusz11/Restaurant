{% extends 'base.html.twig' %}

{% block body %}
    <h1>Orders list</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Imię</th>
                <th>Adres</th>
                <th>Tel</th>
                <th>Status</th>
                <th>Dowóz</th>
                <th>data</th>
                <th>Potwierdź</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.customer.name }}</td>
                <td>{{ client.customer.address }}</td>
                <td>{{ client.customer.phone }}</td>
                <td>{{ client.customer.status }}</td>
                <td>{{ client.customer.optionDelivery }}</td>
                <td>{{ client.customer.date|date }}</td>
                <td><a href="{{ path('orders_edit', { 'id': client.customer.id }) }}">Potwierdź</a></td>

             

            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
